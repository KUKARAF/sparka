FROM eclipse-temurin:17-jdk-alpine

# Install required tools
RUN apk update && apk add --no-cache wget unzip curl

# Install Android SDK
ENV ANDROID_SDK_ROOT=/opt/android-sdk
ENV PATH=$PATH:$ANDROID_SDK_ROOT/cmdline-tools/latest/bin:$ANDROID_SDK_ROOT/platform-tools

RUN wget -q https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip && \
    unzip -q commandlinetools-linux-11076708_latest.zip -d $ANDROID_SDK_ROOT/ && \
    mkdir -p $ANDROID_SDK_ROOT/cmdline-tools/latest && \
    mv $ANDROID_SDK_ROOT/cmdline-tools/* $ANDROID_SDK_ROOT/cmdline-tools/latest/ 2>/dev/null || true && \
    rm commandlinetools-linux-11076708_latest.zip

# Create license files
RUN mkdir -p $ANDROID_SDK_ROOT/licenses && \
    echo "8933bad161af4178b1185d1a37fbf41ea5269c55" > $ANDROID_SDK_ROOT/licenses/android-sdk-license && \
    echo "d56f5187479451eabf01fb78af6dfcb131a6481e" > $ANDROID_SDK_ROOT/licenses/android-sdk-preview-license

# Install Android components
RUN yes | $ANDROID_SDK_ROOT/cmdline-tools/latest/bin/sdkmanager --sdk_root=$ANDROID_SDK_ROOT "platform-tools" "build-tools;34.0.0" "platforms;android-34"

WORKDIR /app
COPY android/ ./

# Build APK
RUN chmod +x gradlew && \
    ./gradlew assembleDebug --no-daemon --stacktrace && \
    cp app/build/outputs/apk/debug/*.apk ./sparka.apk && \
    echo "APK built successfully!" && \
    ls -la sparka.apk

CMD ["ls", "-la", "/app/"]